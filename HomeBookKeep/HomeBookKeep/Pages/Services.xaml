             x:Class="HomeBookKeep.Pages.Services"
             Title="Сервисы">
    <!--<Image WidthRequest="65" Aspect="AspectFit" Source="zemnoiShar.png" ></Image>-->
    <ContentPage.Content>

        <Grid x:Name="serviceGrid" Padding="3">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
