            <Label Text="Планирование доходов" Grid.Row="1" Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center" />
            <Label Text="Бюджет доходов" Grid.Row="2" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center" />
            <Label Text="Получено в кредит" Grid.Row="2" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center" />
            <Label Text="Выдано в долг" Grid.Row="2" Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center" />
            <Label Text="Выдано в долг" Grid.Row="3" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center" />
            <Label Text="Выдано в долг" Grid.Row="3" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center" />
            <Label Text="Выдано в долг" Grid.Row="3" Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center" />
            <Label Text="Выдано в долг" Grid.Row="4" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center" />
            <Label Text="Выдано в долг" Grid.Row="4" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center" />
            <Label Text="Выдано в долг" Grid.Row="4" Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center" />
            <Label Text="Выдано в долг" Grid.Row="2" Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center" />
            <Label Text="Выдано в долг" Grid.Row="2" Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center" />
        </Grid>
